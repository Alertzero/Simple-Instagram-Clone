<% @follower_suggestions.each do |user|%>
  <div class="recommended-followers">
    <div class="row">
      <div class="col-3">
        <%= link_to profile_pic(user),profile_path(user.username) %>
      </div>
      <div class="col-9">
      <%= form_tag follow_user_path, method: :post, class: "float-right" do%>
      <%= hidden_field_tag :follow_id, user.id%>
      <%= submit_tag "Follow", class: "btn btn-info btn-sm"%>
      <%end%>
        <%= link_to user.username, profile_path(user.username), class: "text-dark" %>
        <p><%= user.created_at > 3.days.ago ? "New to Instagram" : "Followed by X users"%></p>
      </div>
    </div>
  </div>
<% end %>
