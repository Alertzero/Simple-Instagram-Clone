<div class="container">
  <div class="row">
    <div class="col-4 text-center">
      <% @user.image_urls.each do |profile_pic| %>
        <%= image_tag profile_pic, width: "200px",class: "profile-pic" %>
      <% end %>
    </div>
    <div class="col-8 text-left">
      <div class="row">
        <div class="col-6">
          <%= link_to "Edit", edit_user_registration_path, class: "btn btn-muted btn-custom float-right"%>
          <h1> <%= @user.full_name %> </h1>
        </div>
      </div>
      <div class="profile-stats"><%= @user.post_count %> posts</div>
      <div class="profile-stats"><%= @user.total_followers %> followers</div>
      <div class="profile-stats"><%= @user.total_following %> following</div>
      <p><%= @user.username %></p>
      <%= simple_format @user.description %>
      <p><%= link_to @user.website if @user.website.present? %></p>
    </div>
    <div class="row ">
      <% @posts.each do |post|%>
        <% post.image_urls.each do |url| %>
          <div class= "col-4"">
            <div class="m-5" >
              <%= link_to image_tag(url, :class => " hover-overlay img img-fluid img-thumbnail w-100 h-auto text-center position-relative"), post_path(post.id)%>
              
             
              <div class="position-absolute b-0">
                <%= pluralize(post.total_likes_count, "like")%>
                <%= pluralize(post.total_comments_count, "comment")%>
              </div>
            </div>
          </div>
        <%end%>
      <% end%>
    </div>
  </div>
</div>
