<div class="container">
  <div class="row">
    <div class="col-8">
      <% @posts.each do |post|%>
        <div class="post-meta">
          <%= post.user.username %>
        </div>
        <% post.image_urls.each do |url| %>
          <%= image_tag url, class: "img img-fluid mb-5 align-items-start" %>
        <%end%>
      <% end %>
    </div>
    <div class="col-4 user-summary">
      <p><strong><%= current_user.username %></strong><br>
        <%= current_user.username%></p>
    </div>
    <div class="follower-sg">
    
    </div>
  </div>
</div>
