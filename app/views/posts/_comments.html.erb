<% post.comments.each do |comment|%>
  <span class= 'float-left mr-2'>
  <% comment.user.image_urls.each do |profile_pic| %>
        <%= image_tag profile_pic, width: "auto", height: "30px", class: "profile-pic" %>
      <% end %>
  
  </span>  
<div><strong><%= comment.user.username%></strong>
<%= comment.comment%></div>
<p class="text-muted"><%= time_ago_in_words comment.created_at %> ago</p>
<% end %>